{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "rootDir": ".",
        "moduleResolution": "node",
        "declaration": true
    },
    "include": [
        "test/**/*",
        "src/**/*",
        "bin/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}